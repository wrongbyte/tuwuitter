{
  "name": "tuwuitter",
  "version": "1.0.0",
  "private": "true",
  "main": "index.js",
  "repository": "git@github.com:wrongbyte/tuwuitter.git",
  "author": "wrongbyte <57643375+wrongbyte@users.noreply.github.com>",
  "license": "MIT",
  "engines": { "node": "17.9.0" },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "yarn dev:all",
    "postinstall": "yarn workspace @tuwuitter/client webpack",
    "start": "yarn workspace @tuwuitter/server start",
    "dev:all": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "dev:server": "yarn workspace @tuwuitter/server dev",
    "dev:client": "yarn workspace @tuwuitter/client start",
    "compile-relay": "yarn workspace @tuwuitter/client relay"
  },
  "dependencies": {
    "commitlint": "^17.0.3",
    "install-peers": "^1.0.4"
  }
}
